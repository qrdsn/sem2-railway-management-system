@using System.Security.Claims
@{var role = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role).Value;}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/icons/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (role == "Administrator")
                        {
                           <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Station" asp-action="Index">Stations</a>
                            </li>
                           <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Railway" asp-action="Index">Railways</a>
                            </li> 
                           <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Train" asp-action="Index">Trains</a>
                            </li>
                           <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Journey" asp-action="Index">Journeys</a>
                            </li> 
                           <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                            </li> 
                        }
                        @if (role == "Employee")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Journey" asp-action="Settings">Journey options</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Ticket" asp-action="Validate">Validate tickets</a>
                            </li>
                        }
                        @if (role == "Administrator" || role == "Passenger")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Ticket" asp-action="Buy">Ticket</a>
                            </li>                            
                        }
                        @if (role == "Employee" || role == "Passenger")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Edit">Edit user</a>
                            </li>    
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">Log out</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
